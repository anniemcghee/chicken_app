<div class="container-fluid">
<div class="col-md-6 text-center">
<h1>About <%= @chicken.name %>:</h1>

<%= image_tag @results[1], :class => "image" %>

<br>
<div class="col-md-6">
<h2>Breed:</h2>
<h3><%= @chicken.breed %></h3>
</div>
<div class="col-md-6">
<h2>Description:</h2>
<h3><%= @chicken.desc %></h3>
</div>
<hr>
<a href='/chickens/<%= @chicken.id %>/edit'><button type="button" class="btn btn-primary"><h3>Edit</h3></button></a>
<br>
</div>


<div class="col-md-6">
<h2>More <%= @chicken.breed %>s:</h2>

<div id="carousel-breeds" class="carousel slide" data-ride="carousel" interval='2000'>

      <div class="carousel-inner" text-center>

          <div class="active item">
              <%= image_tag @results[0] %>
          </div>

          <%  @results.each do |photo| %>
          <div class="item">
            <%= image_tag photo %>
          </div>
          <% end %>
      </div>

  <a class="left carousel-control" href="#carousel-breeds" role="button" data-slide="prev">
    <span class="glyphicon glyphicon-chevron-left"></span>
  </a>
  <a class="right carousel-control" href="#carousel-breeds" role="button" data-slide="next">
    <span class="glyphicon glyphicon-chevron-right"></span>
  </a>
</div>
</div>
</div>

