<div class="container-fluid text-center">
<table class="table table-hover">
<div class="row">
  <div class="col-md-3"
  <tr>
      <h2>Name</h2>
  </div>
  <div class="col-md-3">
      <h2>Breed</h2>
  </div>
   <div class="col-md-3">
      <h2>Description</h2>
  </div>
  </tr>
</div>
<% @chicken.each do |chicken| %>
<tr>
<td>
  <div class="col-md-3">
      <h3><%= chicken.name %></h3>
  </div>
  <div class="col-md-3">
      <h3><%= chicken.breed %></h3>
  </div>
  <div class="col-md-3">
      <h3><%= chicken.desc %></h3>
  </div>
  <div class="col-md-1">
      <h3><%= link_to "View", chicken, class: "btn btn-primary" %></h3>
  </div>
  <div class="col-md-2">
      <h3><%= link_to "X", chicken, method: :delete, class: "btn btn-primary" %></h3>
  </div>
</td>
</tr>


<% end %>

</table>
</div>